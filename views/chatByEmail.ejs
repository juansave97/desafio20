<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Desaf√≠o 20</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css"
        integrity="sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn" crossorigin="anonymous">
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="./chat.css">
</head>

<body>

    <header>
        <%- include('./partials/headerLog', {current: `formProductos`}) %>
    </header>

    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="container">
                <div class="row clearfix">
                    <div class="col-lg-12">
                        <div class="card chat-app">
                            <div id="plist" class="people-list">
                                <ul class="list-unstyled chat-list mt-2 mb-0" id="usersList">
                                    
                                </ul>
                            </div>
                            <div class="chat">
                                <% if (allMessages.length <=0) { %>
                                    <p>No se encontraron datos.</p>
                                <% } else { %>
                                    <div class="chat-history">
                                        <ul class="m-b-0" id="messagesContainer">
                                            <% allMessages.forEach(message=>{ %>
                                                <li class="clearfix">
                                                    <div class="message-data text-right">
                                                            <span class="message-data-time"><%= message.id %>:</span>
                                                        </div>
                                                        <div class="message other-message float-right"> <%= message.text.mensaje %> </div>
                                                    </li>
                                            <% }) %>
                                        </ul>
                                    </div>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>



    <footer>
        <%- include('./partials/footer') %>
    </footer>



    <script src="https://cdnjs.cloudflare.com/ajax/libs/qs/6.10.3/qs.min.js"></script>
</body>

</html>